{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "lib": ["ES2015", "dom"],
    "strict": true,
    "outDir": "./lib",
    "removeComments": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "typeRoots": ["node_modules/@types"],
    "skipLibCheck": true,
    "types": ["@types/jest"],
    "rootDir": "src"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
